.simple-article {
  align-self: center;
  align: center;
  overflow: hidden;
  background: #fff;
}

.simple-col-md-9 {
  position: relative;
  min-height: 1px;
  padding-right: 15px;
  padding-left: 15px;
}

.simple-container {
  width: 92%;
  padding-right: 15px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
}

.simple-article-title {

}

.simple-article-content {
  margin-top: 20px;
  animation: slideInFromTop 2s ease-out 0s 1;
  -webkit-animation: slideInFromTop 2s ease-out 0s 1;
  word-break: break-all;
}
